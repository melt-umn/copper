		<ExtensionGrammars>
			<GrammarRef id="Ext"/>
		</ExtensionGrammars>
		<StartSymbol>
			<NonterminalRef grammar="Host" id="S"/>
		</StartSymbol>
		<ClassName>MDANonILSubsetOnly</ClassName>
		<Preamble>
			<Code><![CDATA[package parsers;

]]></Code>
		</Preamble>
	</ExtendedParser>
	<Grammar id="Host">
		<Declarations>
			<Nonterminal id="A"></Nonterminal>
			<Nonterminal id="B"></Nonterminal>
			<Nonterminal id="S"></Nonterminal>
