<?xml version="1.0" encoding="UTF-8"?>

<!--
  - This spec represents a host and extension grammar that pass Copper's
  - modular determinism analysis. It shares a common host grammar with
  - 'MDAFailing.xml'.
  -->
<CopperSpec xmlns="http://melt.cs.umn.edu/copper/xmlns">
    <ExtendedParser id="MDAPassing">
        <HostGrammar>
            <GrammarRef id="Host"/>
        </HostGrammar>
        <ExtensionGrammars>
            <GrammarRef id="Ext1"/>
        </ExtensionGrammars>
        <StartSymbol><NonterminalRef grammar="Host" id="E"/></StartSymbol>
    </ExtendedParser>
    
    <ExtensionGrammar id="Ext1">
        <Layout>
            <TerminalRef grammar="Host" id="spaces"/>
            <TerminalRef grammar="Host" id="tabs"/>
            <TerminalRef grammar="Host" id="newlines"/>
        </Layout>
        <MarkingTerminals>
            <TerminalRef id="e1_marking"/>
        </MarkingTerminals>
        <BridgeProductions>
            <ProductionRef id="EtoMem"/>
        </BridgeProductions>
        <Declarations>
            <Terminal id="e1_marking">
                <PP>e1_marking</PP>
                <Regex> 
                    <Concatenation>
                        <CharacterSet>
                            <SingleCharacter char="m"/>
                        </CharacterSet>
                        <CharacterSet>
                            <SingleCharacter char="e"/>
                        </CharacterSet>
                        <CharacterSet>
                            <SingleCharacter char="m"/>
                        </CharacterSet>
                        <CharacterSet>
                            <SingleCharacter char=":"/>
                        </CharacterSet>
                    </Concatenation>
                </Regex>
                <Dominates>
      	            <TerminalRef grammar="Host" id="id"/>
                </Dominates>       
            </Terminal>
            <Production id="EtoMem">
                <Precedence>1</Precedence>
                <LHS><NonterminalRef grammar="Host" id="E"/></LHS>
                <RHS>
	                <TerminalRef id="e1_marking"/>
	                <NonterminalRef id="ME"/>
                </RHS>
            </Production>
            
            <Nonterminal id="ME">
                    <PP>ME</PP>
                </Nonterminal>
            <Production id="MEtoEParen">
                <Precedence>1</Precedence>
                <LHS><NonterminalRef id="ME"/></LHS>
                <RHS>
                    <TerminalRef grammar="Host" id="lparen"/>
	                <NonterminalRef grammar="Host" id="E"/>
	                <TerminalRef grammar="Host" id="rparen"/>
                </RHS>
            </Production>
        </Declarations>
    </ExtensionGrammar>
 
    <Grammar id="Host">
        <Layout>
            <TerminalRef id="spaces"/>
            <TerminalRef id="tabs"/>
            <TerminalRef id="newlines"/>
        </Layout>
        <Declarations>
            <Terminal id="spaces">
                <Regex> 
                    <Concatenation>
                        <CharacterSet>
                            <SingleCharacter char=" "/>
                        </CharacterSet>
                        <KleeneStar>
                            <CharacterSet>
                                <SingleCharacter char=" "/>
                            </CharacterSet>
                        </KleeneStar>
                    </Concatenation>
                </Regex>
                <Dominates>
                    <TerminalRef id="tabs"/>
                    <TerminalRef id="newlines"/>
                </Dominates>
            </Terminal>
            <Terminal id="tabs">
                <Regex> 
                    <Concatenation>
                        <CharacterSet>
                            <SingleCharacter char="&#9;"/>
                        </CharacterSet>
                        <KleeneStar>
                            <CharacterSet>
                                <SingleCharacter char="&#9;"/>
                            </CharacterSet>
                        </KleeneStar>
                    </Concatenation>
                </Regex>
            </Terminal>
            <Terminal id="newlines">
                <Regex> 
                    <Concatenation>
                        <CharacterSet>
                            <SingleCharacter char="&#10;"/>
                        </CharacterSet>
                        <KleeneStar>
                            <CharacterSet>
                                <SingleCharacter char="&#10;"/>
                            </CharacterSet>
                        </KleeneStar>
                    </Concatenation>
                </Regex>
            </Terminal>
            <Terminal id="plus">
                <PP>+</PP>
                <Regex> 
                    <CharacterSet>
                        <SingleCharacter char="+"/>
                    </CharacterSet>
                </Regex>
                <Operator>
                  <Precedence>0</Precedence>
                  <LeftAssociative/>
                </Operator>
            </Terminal>
            <Terminal id="minus">
                <PP>-</PP>
                <Regex> 
                    <CharacterSet>
                        <SingleCharacter char="-"/>
                    </CharacterSet>
                </Regex>
                <Operator>
                  <Precedence>0</Precedence>
                  <LeftAssociative/>
                </Operator>
            </Terminal>
            <Terminal id="times">
                <PP>*</PP>
                <Regex> 
                    <CharacterSet>
                        <SingleCharacter char="*"/>
                    </CharacterSet>
                </Regex>
                <Operator>
                  <Precedence>1</Precedence>
                  <LeftAssociative/>
                </Operator>
            </Terminal>
            <Terminal id="div">
                <PP>/</PP>
                <Regex> 
                    <CharacterSet>
                        <SingleCharacter char="/"/>
                    </CharacterSet>
                </Regex>
                <Operator>
                  <Precedence>1</Precedence>
                  <LeftAssociative/>
                </Operator>
            </Terminal>
            <Terminal id="lparen">
                <PP>(</PP>
                <Regex> 
                    <CharacterSet>
                        <SingleCharacter char="("/>
                    </CharacterSet>
                </Regex>
            </Terminal>
            <Terminal id="rparen">
                <PP>)</PP>
                <Regex> 
                    <CharacterSet>
                        <SingleCharacter char=")"/>
                    </CharacterSet>
                </Regex>
            </Terminal>
            <Terminal id="digit">
                <PP>digit</PP>
                <Regex> 
                    <CharacterSet>
                        <SingleCharacter char="0"/>
                    </CharacterSet>
                </Regex>
            </Terminal>
            <Terminal id="id">
                <PP>id</PP>
                <Regex> 
                    <CharacterSet>
                        <SingleCharacter char="a"/>
                    </CharacterSet>
                </Regex>
            </Terminal>

            <Nonterminal id="E">
                <PP>E</PP>
            </Nonterminal>

            <Production id="EplusE">
                <Precedence>1</Precedence>
                <LHS><NonterminalRef id="E"/></LHS>
                <RHS>
                    <NonterminalRef id="E"/>
                    <TerminalRef id="plus"/>
                    <NonterminalRef id="E"/>
                </RHS>
                <Layout><TerminalRef id="spaces"/></Layout>
            </Production>
            <Production id="EminusE">
                <Precedence>1</Precedence>
                <LHS><NonterminalRef id="E"/></LHS>
                <RHS>
                    <NonterminalRef id="E"/>
                    <TerminalRef id="minus"/>
                    <NonterminalRef id="E"/>
                </RHS>
                <Layout><TerminalRef id="spaces"/></Layout>
            </Production>
            <Production id="EtimesE">
                <Precedence>1</Precedence>
                <LHS><NonterminalRef id="E"/></LHS>
                <RHS>
                    <NonterminalRef id="E"/>
                    <TerminalRef id="times"/>
                    <NonterminalRef id="E"/>
                </RHS>
                <Layout><TerminalRef id="spaces"/></Layout>
            </Production>
            <Production id="EdivE">
                <Precedence>1</Precedence>
                <LHS><NonterminalRef id="E"/></LHS>
                <RHS>
                    <NonterminalRef id="E"/>
                    <TerminalRef id="div"/>
                    <NonterminalRef id="E"/>
                </RHS>
                <Layout><TerminalRef id="spaces"/></Layout>
            </Production>
            <Production id="parenE">
                <Precedence>1</Precedence>
                <LHS><NonterminalRef id="E"/></LHS>
                <RHS>
                    <TerminalRef id="lparen"/>
                    <NonterminalRef id="E"/>
                    <TerminalRef id="rparen"/>
                </RHS>
                <Layout><TerminalRef id="spaces"/></Layout>
            </Production>
            <Production id="Edigit">
                <Precedence>1</Precedence>
                <LHS><NonterminalRef id="E"/></LHS>
                <RHS>
                    <TerminalRef id="digit"/>
                </RHS>
                <Layout><TerminalRef id="spaces"/></Layout>
            </Production>
            <Production id="Eid">
                <Precedence>1</Precedence>
                <LHS><NonterminalRef id="E"/></LHS>
                <RHS>
                    <TerminalRef id="id"/>
                </RHS>
                <Layout><TerminalRef id="spaces"/></Layout>
            </Production>
        </Declarations>
    </Grammar>
</CopperSpec>
